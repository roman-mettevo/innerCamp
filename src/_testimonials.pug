#video-testimonials-slider-1,
#video-testimonials-slider-2 {
  .video-testimony-item {
    box-shadow: 18px 41px 71px rgba(0, 0, 0, 0.25), inset 5px 6px 14px rgba(0, 0, 0, 0.12);
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    border-radius: 34px;
    &::before {
      z-index: 1;
      position: absolute;
      top: 1;
      left: 0;
      width: 100%;
      height: 100%;
      content: "";
      border-radius: 34px;
      background: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2));
    }

    &::after {
      position: absolute;
      content: url(../img/testimonials/play-circle.svg);
      width: 111px;
      height: 111px;
      z-index: 4;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    img {
      border-radius: 34px;
      position: relative;
    }
  }
}
